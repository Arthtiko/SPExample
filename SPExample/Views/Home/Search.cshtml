@model EmployeeSalary

<form asp-controller="home" asp-action="search" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="EmployeeName" class="col-sm-2 col-form-label">Employee Name</label>
        <div class="col-sm-10">
            <input asp-for="EmployeeName" class="form-control" placeholder="Employee Name" />
            <span asp-validation-for="EmployeeName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
    <a asp-controller="home" asp-action="GetAllSalary" class="btn btn-primary">Get All Salary</a>
 </form>
